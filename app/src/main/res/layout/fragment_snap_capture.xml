<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkApp"
    tools:context=".View.SnapCaptureMenu.SnapCaptureFragment">

    <ImageView
        android:src="@drawable/smart_city"
        android:id="@+id/image_capture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:padding="15dp"
        android:background="@drawable/background_box_white"/>

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_capture"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="@string/press_button_to_take_the_picture_from_your_iot_device"/>
    <TextView
        android:id="@+id/btn_take_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/take_snap_shot"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:padding="@dimen/activity_margin"
        android:layout_below="@+id/keterangan"
        android:background="@drawable/background_box_green"/>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:background="@xml/loading_proggress" />
</RelativeLayout>